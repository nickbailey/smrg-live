#!/bin/sh

lb config noauto \
	--distribution "wheezy" \
	--binary-images "hdd" \
	--package-lists "lxde" \
	--architecture "i386" \
	--linux-flavours "686" \
	--archive-areas "main contrib" \
	--parent-archive-areas "main contrib" \
	--mirror-bootstrap "http://localhost:3142/ftp.uk.debian.org/debian/" \
	--parent-mirror-bootstrap "http://localhost:3142/ftp.uk.debian.org/debian/" \
	--mirror-chroot "http://localhost:3142/ftp.uk.debian.org/debian/" \
	--parent-mirror-chroot "http://localhost:3142/ftp.uk.debian.org/debian/" \
	--mirror-binary "http://localhost:3142/ftp.uk.debian.org/debian/" \
	--parent-mirror-binary "http://localhost:3142/ftp.uk.debian.org/debian/" \
	--apt-indices false \
	--bootappend-live "locale=uk" \
	"${@}"

# These options are make testing faster,
# but you end up with the localhost proxy
# in the images /etc/apt/sources.list
#	--mirror-binary "http://localhost:3142/ftp.uk.debian.org/debian/" \
#	--parent-mirror-binary "http://localhost:3142/ftp.uk.debian.org/debian/" \

